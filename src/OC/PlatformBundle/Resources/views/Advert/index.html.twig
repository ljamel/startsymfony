{# src/OC/PlatformBundle/Resources/views/Advert/index.html.twig #}

{% extends "OCPlatformBundle::layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block ocplatform_body %}

  <h2>Liste des annoncesiouutgyuifuitftyd</h2>

<!-- affiche 1 si c'est du spam sinon rien -->
{{ checkIfSpam('leListe des annoncesiouutgyuifuitftydListe d') }}



<!-- message flash -->
    {% if app.session.flashBag.has('info') %}
        <div class="alert alert-info">
            {% for msg in app.session.flashBag.get('info') %}
                {{ msg }}
            {% endfor %}
        </div>
    {% endif %}
  <ul>
    {% for advert in listAdverts %}
      <li>
        <a href="{{ path('oc_platform_view', {'slug': advert.slug}) }}">
          {{ advert.title }}
        </a>
        par {{ advert.author }},
        le {{ advert.date|date('d/m/Y') }}	 
      </li>
	  <p>{{ advert.content | truncate(150) }}</p>
    {% else %}
      <li>Pas (encore !) d'annonces</li>
    {% endfor %}
  </ul> 

    <div>
      Catégories :
      <ul>
        {% for advertSkill in listAdvertSkills %}
		  <li><a href="{{ path('oc_platform_cat', {'name': advertSkill.name}) }}">{{ advertSkill.name }}</a></li>
        {% endfor %}
      </ul>
    </div>

  <ul class="pagination">
    {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
    {% for p in range(1, nbPages) %}
      <li{% if p == page %} class="active"{% endif %}>
        <a href="{{ path('oc_platform_home', {'page': p}) }}">{{ p }}</a>
      </li>
    {% endfor %}
  </ul>

{% endblock %}
